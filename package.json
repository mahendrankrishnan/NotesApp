{
  "name": "notes-app",
  "version": "1.0.0",
  "private": true,
  "description": "Notes Application with Next.js and Fastify",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev": "pnpm --parallel --filter \"./frontend\" --filter \"./backend\" dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "start": "pnpm --parallel --filter \"./frontend\" --filter \"./backend\" start"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

